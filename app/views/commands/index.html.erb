<p id="notice"><%= notice %></p>

<h1>Commands</h1>

<table>
  <thead>
    <tr>
      <th>Payment status</th>
      <th>Client name</th>
      <th>Client cpf</th>
      <th>Client email</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commands.each do |command| %>
      <tr>
        <td><%= command.status %></td>
        <td><%= command.client_name %></td>
        <td><%= command.client_cpf %></td>
        <td><%= command.client_email %></td>
        <td><%= command.total %></td>
        <td><%= link_to 'Show', command %></td>
        <td><%= link_to 'Edit', edit_command_path(command) %></td>
        <td><%= link_to 'Destroy', command, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

