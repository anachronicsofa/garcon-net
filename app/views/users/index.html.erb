
<h1 class="page-title"> Usuários </h1>
<h3 id="notice"><%= notice %></h3>
  <div class="btn_container">
    <%= link_to 'Criar Usuário', new_user_path, class: "btn btn--link" %>
  </div>

<div class="table_container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Admin</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= ' ⠀✔' if user.admin == true %>
          </td>
          <td><%= link_to '✎', edit_user_path(user), class: 'btn btn--discrete' %>
          <%= link_to '✘', user, method: :destroy, class: 'btn btn--delete', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

<%= will_paginate @users, :previous_label => '  ⇦', :next_label => ' ⇨', input_html: {class: 'pagination'} %>

  


